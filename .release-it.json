{
    "git": {
        "commitMessage": "chore: release v${version}",
        "requireBranch": [
            "master",
            "beta",
            "alpha",
            "next",
            "DHIS2-17121-deployment-ci-and-docker"
        ]
    },
    "github": {
        "release": true,
        "assets": ["dist/push-analytics.tar.gz"]
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "CHANGELOG.md",
            "header": "# Changelog",
            "preset": {
                "name": "conventionalcommits",
                "types": [
                    {
                        "type": "feat",
                        "section": "Features"
                    },
                    {
                        "type": "fix",
                        "section": "Bug Fixes"
                    }
                ]
            }
        }
    },
    "npm": {
        "publish": false
    },
    "hooks": {
        "before:init": ["npm run lint", "npm run test"],
        "after:bump": "npm run build",
        "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
}
