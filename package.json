{
    "name": "push-analytics",
    "version": "0.1.0",
    "description": "A NodeJS service using Puppeteer to generate images and HTML to insert into an email",
    "main": "dist/index.js",
    "author": "Hendrik de Graaf",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build:clear": "rimraf ./build && mkdir ./build && mkdir ./build/images",
        "build:deps": "cp ./package.json ./yarn.lock ./build/ && cd ./build && yarn install --production --ignore-scripts --prefer-offline",
        "build:src": "rimraf ./build && tsc -p tsconfig.prod.json",
        "build": "yarn build:clear && yarn build:deps && yarn build:src",
        "start:dev": "nodemon --exec ts-node -r dotenv/config src/index.ts",
        "start:prod": "yarn build && node build/index.js",
        "lint": "d2-style check",
        "format": "d2-style apply",
        "test": "yarn tsc --noEmit && TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true node --test --require ts-node/register $(find ./src -name '*.test.ts')",
        "test:watch": "yarn tsc --noEmit && TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true node --test --watch --require ts-node/register $(find ./src -name '*.test.ts')"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.2.1",
        "@commitlint/config-conventional": "^19.1.0",
        "@commitlint/types": "^19.0.3",
        "@dhis2/cli-style": "^10.5.1",
        "@release-it/conventional-changelog": "^8.0.1",
        "@types/node": "^20.8.3",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "dotenv": "^16.3.1",
        "eslint": "^8.51.0",
        "husky": "^9.0.11",
        "nock": "^13.5.4",
        "nodemon": "^3.0.1",
        "release-it": "^17.2.0",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@dhis2/d2-ui-rich-text": "^7.4.3",
        "axios": "^1.7.4",
        "minimatch": "^9.0.3",
        "puppeteer": "^21.3.8"
    }
}
