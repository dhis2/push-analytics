{
    "name": "push-analytics",
    "version": "0.1.6-alpha.10",
    "description": "A NodeJS service using Puppeteer to generate images and HTML to insert into an email",
    "main": "dist/index.js",
    "author": "Hendrik de Graaf",
    "license": "MIT",
    "private": true,
    "scripts": {
        "prepare": "husky",
        "build:compile": "./scripts/build.sh",
        "build:compress": "./scripts/compress.sh",
        "build": "npm run build:compile && npm run build:compress",
        "start:dev": "nodemon --exec ts-node -r dotenv/config src/index.ts",
        "start:prod": "npm run build && node ./dist/index.js",
        "lint:tsc": "npx tsc --noEmit -p ./tsconfig.prod.json",
        "lint:eslint": "npx eslint --quiet --ext .js,.ts .",
        "lint:prettier": "npx prettier --check .",
        "lint": "npm run lint:tsc && npm run lint:eslint && npm run lint:prettier",
        "format": "npx prettier --write . && npx eslint --quiet --fix --ext .js,.ts .",
        "test": "npx tsc --noEmit && TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true node --test --require ts-node/register $(find ./src -name '*.test.ts')",
        "test:watch": "npx tsc --noEmit && TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true node --test --watch --require ts-node/register $(find ./src -name '*.test.ts')",
        "release": "release-it"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.2.1",
        "@commitlint/config-conventional": "^19.1.0",
        "@commitlint/types": "^19.0.3",
        "@dhis2/cli-style": "^10.5.1",
        "@release-it/conventional-changelog": "^8.0.1",
        "@types/node": "^20.8.3",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "dotenv": "^16.3.1",
        "eslint": "^8.51.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "nock": "^13.5.4",
        "nodemon": "^3.0.1",
        "release-it": "^17.2.0",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.4",
        "ts-node": "^10.9.2",
        "tsc-files": "^1.1.4",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@dhis2/d2-ui-rich-text": "^7.4.3",
        "axios": "^1.7.4",
        "minimatch": "^9.0.3",
        "puppeteer": "^21.3.8"
    },
    "lint-staged": {
        "*.ts": [
            "tsc-files --noEmit",
            "eslint --quiet --fix",
            "prettier --write --ignore-unknown"
        ],
        "*.js": [
            "eslint --quiet --fix",
            "prettier --write --ignore-unknown"
        ],
        "*.{json,html,md}": "prettier --write --ignore-unknown"
    }
}
