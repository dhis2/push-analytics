        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2021", "dom"],
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "build",
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true
